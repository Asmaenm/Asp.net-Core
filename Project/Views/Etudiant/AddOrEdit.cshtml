@model Project.Models.Etudiant

@{
    ViewData["Title"] = "Create";
}

<h4>Registre Etudiant</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-row">
                 
                <div class="form-group col-md-6">
                    <label asp-for="prenomEt" class="control-label"></label>
                    <input asp-for="prenomEt" class="form-control" />
                    <span asp-validation-for="prenomEt" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="nomEt" class="control-label"></label>
                    <input asp-for="nomEt" class="form-control" />
                    <span asp-validation-for="nomEt" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="tel" class="control-label"></label>
                <input asp-for="tel" class="form-control" />
                <span asp-validation-for="tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emailEt" class="control-label"></label>
                <input asp-for="emailEt" class="form-control" />
                <span asp-validation-for="emailEt" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Valider" class="btn btn-primary btn-block" />
                </div>
                <div  class="form-group col-md-6">
                    <a asp-action="Index"  class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Retourner Ã  la liste</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
