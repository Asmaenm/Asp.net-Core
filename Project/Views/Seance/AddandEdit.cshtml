
@model Project.Models.Seance

@{
    ViewData["Title"] = "Create";
}

<h4>Ajouter une séance</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddandEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-row">
                
                <div class="form-group col-md-6">
                    <label asp-for="nomSeance" class="control-label"></label>
                    <input asp-for="nomSeance" class="form-control" />
                    <span asp-validation-for="nomSeance" class="text-danger"></span>
                </div>
            </div>
          
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Valider" class="btn btn-primary btn-block" />
                </div>
                <div  class="form-group col-md-6">
                    <a asp-action="Index"  class="btn btn-secondary btn-block"><i class="fa fa-table"></i> Retourner à la liste</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
